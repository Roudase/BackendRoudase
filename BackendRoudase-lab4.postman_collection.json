            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let jsonData;",
                  "try {",
                  "  jsonData = pm.response.json();",
                  "} catch (e) {",
                  "  jsonData = null;",
                  "}",
                  "if (jsonData && jsonData.accessToken) {",
